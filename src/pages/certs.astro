---

<Base title="Certifications ‚Äî Portfolio" current="/certs">

  <div class="page-header animate-in">
    <span class="label">Certifications</span>
    <h1>Badges & Certs</h1>
    <p class="subtitle">Certifications and verified credentials.</p>
  </div>

  <!-- Credly Profile Embed (optional ‚Äî uncomment and replace the URL) -->
  <!--
  <div class="credly-profile animate-in">
    <div class="iframe-wrap">
      <iframe src="https://www.credly.com/users/your-username/badges" style="border:none; width:100%; height:400px;"></iframe>
    </div>
  </div>
  <hr class="divider">
  -->

  <div class="badge-grid">
    {certifications.map((cert, i) => (
      <a
        href={cert.badgeLink || '#'}
        target={cert.badgeLink ? '_blank' : undefined}
        rel={cert.badgeLink ? 'noopener noreferrer' : undefined}
        class="badge-card animate-in"
        style={`animation-delay: ${0.05 + i * 0.07}s`}
      >
        <div class="badge-image-wrap">
          {cert.badgeImage ? (
            <img src={cert.badgeImage} alt={cert.name} class="badge-image" loading="lazy" />
          ) : (
            <div class="badge-placeholder">
              <span>üõ°Ô∏è</span>
            </div>
          )}
        </div>
        <div class="badge-info">
          <div class="badge-name">{cert.name}</div>
          <div class="badge-issuer">{cert.issuer}</div>
          {cert.date && <div class="badge-date">{cert.date}</div>}
        </div>
      </a>
    ))}
  </div>

  {certifications.length === 0 && (
    <p style="color: var(--text-muted); font-family: var(--font-mono); font-size: 0.85rem;">
      No certifications added yet. Edit src/pages/certs.astro to add yours.
    </p>
  )}

</Base>

<style>
  .badge-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
    gap: 1.25rem;
  }

  .badge-card {
    background: var(--bg-card);
    border: 1px solid var(--border-subtle);
    border-radius: 8px;
    padding: 1.75rem 1.25rem 1.5rem;
    text-align: center;
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.25rem;
  }

  .badge-card:hover {
    background: var(--bg-card-hover);
    border-color: var(--border);
    transform: translateY(-2px);
    opacity: 1;
  }

  .badge-image-wrap {
    width: 110px;
    height: 110px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    background: var(--bg-secondary);
    border: 1px solid var(--border-subtle);
    overflow: hidden;
    transition: border-color 0.3s;
  }

  .badge-card:hover .badge-image-wrap {
    border-color: var(--accent);
    box-shadow: 0 0 20px var(--accent-dim);
  }

  .badge-image {
    width: 85px;
    height: 85px;
    object-fit: contain;
    filter: brightness(0.95);
    transition: filter 0.3s;
  }

  .badge-card:hover .badge-image {
    filter: brightness(1.05);
  }

  .badge-placeholder {
    font-size: 2.5rem;
    opacity: 0.4;
  }

  .badge-info {
    display: flex;
    flex-direction: column;
    gap: 0.3rem;
  }

  .badge-name {
    font-weight: 600;
    font-size: 0.92rem;
    color: var(--text-primary);
    line-height: 1.3;
  }

  .badge-issuer {
    font-size: 0.78rem;
    color: var(--text-secondary);
  }

  .badge-date {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    color: var(--text-muted);
    margin-top: 0.15rem;
  }

  .iframe-wrap {
    width: 100%;
    overflow: hidden;
    border-radius: 8px;
    border: 1px solid var(--border-subtle);
  }

  @media (max-width: 480px) {
    .badge-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 0.75rem;
    }
    .badge-card {
      padding: 1.25rem 0.75rem 1rem;
    }
    .badge-image-wrap {
      width: 80px;
      height: 80px;
    }
    .badge-image {
      width: 60px;
      height: 60px;
    }
  }
</style>
