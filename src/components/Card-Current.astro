---
interface Props {
  title: string;
  description: string;
  href: string;
  date: string;
  tags?: string[];
  date?: string;
  accentTag?: string;
  external?: boolean;
}

const { title, description, href, tags = [], date, accentTag, external } = Astro.props;
---

<a
  href={href}
  class="card-current animate-in"
  target={external ? '_blank' : undefined}
  rel={external ? 'noopener noreferrer' : undefined}
>
  <div class="card-current-title">{title}</div>
  <div class="card-current-desc">{description}</div>
  <div class="card-current-meta">
    {accentTag && <span class="tag accent">{accentTag}</span>}
    {tags.map(tag => <span class="tag">{tag}</span>)}
    {date && <span class="card-current-date">{date}</span>}
  </div>
</a>
